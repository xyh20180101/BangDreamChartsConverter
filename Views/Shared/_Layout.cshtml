<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/elementui-2.13.css" />
    <script type="text/javascript" src="/js/vue-min.js"></script>
    <script type="text/javascript" src="/js/vue-clipboard.min.js"></script>
    <script type="text/javascript" src="/js/axios-min.js"></script>
    <script type="text/javascript" src="/js/elementui-2.13.js"></script>
    <style>
        html, body {
            padding: 0;
            margin: 0;
            height: 100%
        }

        /*隐藏横向滚动条*/
        #app .el-scrollbar .el-scrollbar__wrap {
            overflow-x: hidden;
        }
    </style>
    @RenderSection("Style", false)
</head>
<body>
    <div id="app" style="height: 100%;display: flex;flex-direction: column">
        <el-scrollbar style="height: 200px; flex: 1">
            <div style="padding: 10px; box-sizing: border-box;">
                @RenderBody()
            </div>
        </el-scrollbar>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>